<div class="min-h-screen w-100 flex flex-col items-center justify-center">
    <form action="/api/sessions/login" method="POST" class="flex flex-col">
        <label for="email" class="mb-2 text-sm font-medium text-gray-900">Email: </label>
        <input 
            placeholder="Your email..."
            type="text"
            id="email"
            name="email"
            class=" w-52 bg-gray-50 border border-gray-700 text-gray-900 text-sm rounded-lg focus:ring-gray-400 focus:border-gray-400 p-2.5 focus:outline-none">
        <label for="password" class="mb-2 text-sm font-medium text-gray-900">Password: </label>
        <input 
            placeholder="Your password..."
            type="password"
            id="password"
            name="password"
            class="w-52 bg-gray-50 border border-gray-700 text-gray-900 text-sm rounded-lg focus:ring-gray-400 focus:border-gray-400 p-2.5 focus:outline-none">
        <input type="submit" value="Login" class="mt-3 bg-gray-700 hover:bg-gray-500 text-white font-medium uppercase py-2 px-4 rounded cursor-pointer">
    </form>
     <a class="mt-2 text-black font-medium cursor-pointer" href="/api/sessions/github">Log in with Github</a>
        <a class="mt-2 text-blue-700 font-medium cursor-pointer" href="/register">If you don't have an account, create one</a>
</div>


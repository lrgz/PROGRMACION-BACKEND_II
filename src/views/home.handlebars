<h1 class="font-bold text-6xl text-gray-700 text-center uppercase my-5">Products</h1>
<a class="py-2 px-4 rounded cursor-pointer my-3 block text-center font-medium text-lg text-white uppercase bg-gray-700 hover:bg-gray-500" href="/realtimeproducts">Real Time Products</a>


{{#if products}}
<ul>
    {{#each products}}
    <li class="flex justify-between">
        <div>
            <p class="font-semibold text-lg">{{this.title}}</p>
            <p class="font-bold text-xl text-green-600 text-justify">$ {{this.price}}</p>
            <p class="max-w-lg my-2">{{this.description}}</p>
            <p class="">ID: {{this.id}}</p>
            <p class="">CODE: {{this.code}}</p>
            <p class="">STATUS: {{this.status}}</p>
            <p class="">STOCK: {{this.stock}}</p>
            <p class="">CATEGORY: {{this.category}}</p>
            <p class=" max-w-lg">NÂº OF THUMBNAILS: {{this.thumbnails.length}}</p>
        </div>
         <div class="grid grid-cols-3">
            {{#each this.thumbnails}}
                <img class="h-40" src="{{this}}" alt="Product image">
            {{/each}}
        </div>
    </li>
    <hr class="my-5 border-gray-600">
    {{/each}}
</ul>
{{/if}}